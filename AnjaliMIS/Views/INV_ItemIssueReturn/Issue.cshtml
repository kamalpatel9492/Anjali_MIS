@Model List<AnjaliMIS.Models.INV_IssueReturn>
    @{
        ViewBag.Title = "Issue";
    }

    @section breadcrumb {
        <li>
            @Html.ActionLink("Issue / Return", "Index",
                        new { controller = "INV_ItemIssueReturn" })
        </li>
    }
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>

    <div class="col-md-12 ">
        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>Issued Item(s)
                </div>
                <div class="actions">
                    <div class="btn-group">
                        @using (Html.BeginForm("AddIssueItem", "INV_ItemIssueReturn", FormMethod.Post))
                        {
                            <div class="col-md-2">
                                <button type="submit" id="btnAddIssueItem" class="btn btn-transparent green btn-circle btn-sm active"> Issue</button>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="portlet-body">
                <!-- BEGIN FORM-->
                <table class="table table-striped table-bordered table-advance table-hover" id="MyTable">
                    <thead>
                        <tr>
                            <th>Sr.</th>
                            <th>Issue No.</th>
                            <th>Issue Date</th>
                            <th>Issue To User</th>
                            @*<th>Quantity</th>
                                <th>Remarks</th>*@
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            int i = 1;
                            foreach (var item in @Model)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>@item.IssueReturnNo</td>
                                    <td>@item.IssueReturnDate</td>
                                    <td>@item.SEC_User1.UserName</td>
                                    @*<td>@item.Quantity</td>
                                        <td>@item.Remarks</td>*@
                                </tr>
                                i++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>





