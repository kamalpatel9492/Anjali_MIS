@model List<AnjaliMIS.Models.INV_StockHistory>
@{
    ViewBag.Title = "Return";
}

@section breadcrumb {
    <li>
        @Html.ActionLink("Issue / Return", "Index",
                    new { controller = "INV_ItemIssueReturn" })
    </li>
}
<script src="~/Scripts/jquery-3.3.1.min.js"></script>


<div class="col-md-12">
    <div class="portlet light">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-gift"></i>Returned Item(s)
            </div>
            <div class="actions">
                @using (Html.BeginForm("AddReturnItem", "INV_ItemIssueReturn", FormMethod.Post))
                {
                    <div class="col-md-2">
                        <button type="submit" id="btnAddReturnItem" class="btn btn-transparent green btn-circle btn-sm active">Return</button>
                    </div>
                }
            </div>
        </div>
        <div class="portlet-body">
            <!-- BEGIN FORM-->
            <table class="table table-striped table-advance table-hover table-responsive" id="MyTable">
                <thead>
                    <tr>
                        <th>No.</th>
                        <th>Return No.</th>
                        <th>ItemName</th>
                        <th>OprationType</th>
                        <th>Quantity</th>
                        <th>Remarks</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        int i = 1;
                        foreach (var item in @Model)
                        {
                            <tr>
                                <td>@i</td>
                                <td>@item.ReturnNumber</td>
                                <td>@item.INV_Item.ItemName</td>
                                <td>@item.SYS_OperationType.OperationType</td>
                                <td>@item.Quantity</td>
                                <td>@item.Remarks</td>
                            </tr>
                            i++;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
