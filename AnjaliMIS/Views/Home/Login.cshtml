@model AnjaliMIS.ViewModals.LoginViewModal

@{
    /**/

    ViewBag.Title = "Login";
    Layout = null;
}

<head>

    <!-- BEGIN GLOBAL MANDATORY STYLES -->
    @Styles.Render("~/assets/global/plugins/font-awesome/css/font-awesome.min.css")
    @Styles.Render("~/assets/global/plugins/simple-line-icons/simple-line-icons.min.css")
    @Styles.Render("~/assets/global/plugins/bootstrap/css/bootstrap.min.css")
    @Styles.Render("~/assets/global/plugins/uniform/css/uniform.default.css")
    @Styles.Render("~/assets/global/plugins/select2/select2.css")
    @Styles.Render("~/assets/admin/pages/css/login3.css")
    @Styles.Render("~/assets/global/css/components.css")
    @Styles.Render("~/assets/global/css/plugins.css")
    @Styles.Render("~/assets/admin/layout/css/layout.css")
    @Styles.Render("~/assets/admin/layout/css/themes/darkblue.css")
    @Styles.Render("~/assets/admin/layout/css/custom.css")
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700&subset=all" rel="stylesheet" type="text/css" />
    <!-- END GLOBAL MANDATORY STYLES -->
    <!-- BEGIN PAGE LEVEL STYLES -->
    <!-- END PAGE LEVEL SCRIPTS -->
    <!-- BEGIN THEME STYLES -->
    <link href="../../" rel="stylesheet" type="text/css" />
    <!-- END THEME STYLES -->
</head>
<body class="login">
    <div class="logo">
       <h3 style="color:white !important">Anjali MIS</h3>
    </div>
    <div class="content">

        @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "login-form" }))
        {
            <h3 class="form-title">Login to your account</h3>

            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            @*@if (@ViewBag.Message != null)
                {
                    <div style="border: 1px solid red">
                        @ViewBag.Message
                    </div>
                }*@


            <div class="form-group">
                <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                <label class="control-label visible-ie8 visible-ie9">Username</label>
                <div class="input-icon">
                    <i class="fa fa-user"></i>
                    @*<input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="Username" name="username" />*@
                    @Html.TextBoxFor(a => a.UserName, new { @class = "form-control placeholder-no-fix", @placeholder = "Username" })
                    @Html.ValidationMessageFor(a => a.UserName)
                </div>
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Password</label>
                <div class="input-icon">
                    <i class="fa fa-lock"></i>
                    @*<input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="Password" name="password" />*@
                    @Html.PasswordFor(a => a.Password, new { @class = "form-control placeholder-no-fix", @placeholder = "Password", @Type = "password" })
                    @Html.ValidationMessageFor(a => a.Password)

                </div>
            </div>
            <div class="form-actions">
                <label class="checkbox">
                    <input type="checkbox" name="remember" value="1" /> Remember me
                </label>
                <button type="submit" class="btn green-haze pull-right">
                    Login <i class="m-icon-swapright m-icon-white"></i>
                </button>
            </div>
        }
    </div>
</body>

